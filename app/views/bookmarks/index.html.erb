<h1>Bookmarks</h1>

<% if @bookmarks.any? %>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= link_to bookmark.chapter.title, chapter_path(bookmark.chapter) %>
        <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks found.</p>
<% end %>

<%= link_to "Back to Chapters", chapters_path %>
